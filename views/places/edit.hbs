<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Edit {{name}}</h1>

      <hr>

      <form method="POST" action="/places/{{id}}/edit">

        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" type="text" class="form-control" id="name" value="{{name}}">
        </div>
        <div class="form-row">
          <div class="col">

            <div class="form-group">
              <label for="latitude">Latitude</label>
              <input name="latitude" type="text" class="form-control" id="latitude">
            </div>

          </div>
          <div class="col">

            <div class="form-group">
              <label for="longitude">Longitude</label>
              <input name="longitude" type="text" class="form-control" id="longitude">
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-dark">Save Edit</button>
        <a href="/places" class="btn btn-outline-dark">Go back</a>
      </form>

    </div>
  </div>


</div>